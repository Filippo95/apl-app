<div class="page-header">
  <%= link_to new_attivitum_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuova Attività
  <% end %>
  <h1>Lista Attività</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Data</th>
            <th>Titolo</th>
            <th>Luogo</th>
            <th>Descrizione</th>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </thead>
    <tbody>
      <%= content_tag_for(:tr, @attivita) do |attivitum| %>
            <td><%= attivitum.data %></td>
            <td><%= attivitum.titolo %></td>
            <td><%= attivitum.luogo %></td>
            <td><%= attivitum.descrizione %></td>
            <td><%= link_to 'Mostra', attivitum %></td>
            <td><%= link_to 'Modifica', edit_attivitum_path(attivitum) %></td>
            <td><%= link_to 'Elimina', attivitum, method: :delete, data: { confirm: 'Sei sicuro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>